<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>

            <item android:drawable="@color/main_border"
                  android:left="3dp"
                  android:right="3dp"/>
            <item android:drawable="@color/color_primary"
                  android:left="4dp"
                  android:right="4dp"
                  android:top="1dp"/>
        </layer-list>
    </item>
    <item>
        <layer-list>

            <item android:drawable="@color/main_border"
                  android:left="3dp"
                  android:right="3dp"/>
            <item android:drawable="@color/white"
                  android:left="4dp"
                  android:right="4dp"
                  android:top="1dp"/>
        </layer-list>
    </item>
</selector>