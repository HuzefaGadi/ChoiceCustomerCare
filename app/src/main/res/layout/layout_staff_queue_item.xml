<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/queue_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/queue_item_text"/>

    <TextView
        android:id="@+id/queue_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/queue_item_text"
        android:textColor="@color/black"
        android:textSize="@dimen/queue_item_time"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/queue_item_text_responded_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/queue_item_time"
        android:textColor="@color/black"
        android:textSize="@dimen/queue_item_text"/>

    <TextView
        android:id="@+id/queue_item_text_responded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/queue_item_text_responded_name"
        android:textColor="@color/black"
        android:textSize="@dimen/queue_item_time"
        android:textStyle="italic"/>
</RelativeLayout>